<body style="background: #000;">

    <!-- Sign In Start -->
    <form action="/singup" method="post" enctype="multipart/form-data">
        <div class="container-fluid">
            <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
                <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                    <div class=" rounded p-4 p-sm-5 my-4 mx-3" style="background-color: #191C24;">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <a href="index.html" class="">
                                <h3 style="color: #EB1616;"><i class="fa fa-user-edit me-2"></i>Rento
                                </h3>
                            </a>
                            <h3 style="color: white;">Sign Up</h3>
                        </div>
                        <div class="form-floating mb-3">
                            <label for="floatingInput">Email address</label>
                            <input type="email" name="email" required class="form-control" id="floatingInput"
                                placeholder="name@example.com">
                        </div>
                        <div class="form-floating mb-4">
                            <label for="floatingPassword">Password</label>
                            <input type="password" name="password" required class="form-control" id="floatingPassword"
                                placeholder="Password">
                        </div>
                        <div class="form-floating mb-3">
                            <label for="floatingInput">Username</label>
                            <input type="text" class="form-control" name="username" id="floatingInput"
                                placeholder="Username">
                        </div>
                        <div class="form-floating mb-3">
                            <label for="floatingInput">Phone</label>
                            <input type="text" class="form-control" name="phone" required id="floatingInput"
                                placeholder="Phone No">
                        </div>
                        <div class="form-floating mb-3">
                            <label for="floatingInput">City</label>
                            <input type="text" class="form-control" name="city" required id="floatingInput"
                                placeholder="City Name">
                        </div>
                        <div class="form-floating mb-3">
                            <label for="floatingInput">State</label>
                            <input type="text" class="form-control" name="state" required id="floatingInput"
                                placeholder="State Name">
                        </div>
                        <div class="form-floating mb-3">
                            <label for="floatingInput">Address</label>
                            <input type="text" class="form-control" name="address" required id="floatingInput"
                                placeholder="Address">
                        </div>
                        <div class="form-floating mb-3">
                            <label for="floatingInput">Profile Image</label>
                            <input type="file" class="form-control" name="user" required id="floatingInput">
                        </div>
                        <div class="form-floating mb-3">
                            <label for="floatingInput">License Image</label>
                            <input type="file" class="form-control" name="document" required id="floatingInput">
                        </div>
                        <button type="submit" class="btn  py-3 w-100 mb-4"
                            style="background-color: #EB1616;color: white;">Sign Up</button>
                        <p class="text-center mb-0" style="color: white;">have an Account?
                            <a style="color:  #EB1616" href="/login">Login</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <!-- Sign In End -->
    </div>

