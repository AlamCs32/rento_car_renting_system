<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rento Payment</title>
    <!-- bootstrap css -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>

<body>
    <form action="" method="post">
        <div class="container">
            <div class="col-lg-5 p-0 ps-lg-4">
                <div class="row m-0">
                    <div class="col-12 px-4">
                        <div class="d-flex align-items-end mt-4 mb-2">
                            <p class="h4 m-0"><span class="pe-1">Rento</span><span class="pe-1">Paymrnt</span></p>
                        </div>
                    </div>
                    <div class="col-12 px-0">
                        <div class="row bg-light m-0">
                            <div class="col-12 px-4 my-4">
                                <p class="fw-bold">Payment detail</p>
                            </div>
                            <div class="col-12 px-4">

                                <div class="d-flex  mb-4">
                                    <span class="">
                                        <p class="text-muted">User ID </p>
                                        <input class="form-control" type="text" name="userId"
                                            value="<%= vehicle.userId %>" readonly placeholder="1234 5678 9012 3456">
                                    </span>
                                </div>
                                <div class="d-flex  mb-4">
                                    <span class="">
                                        <p class="text-muted">Booking Id</p>
                                        <input class="form-control" type="text" readonly name="bookingId"
                                            value="<%= vehicle.id %>" placeholder="1234 5678 9012 3456">
                                    </span>
                                </div>
                                <div class="d-flex  mb-4">
                                    <span class="">
                                        <p class="text-muted">Total Ammount</p>
                                        <input class="form-control" type="text" readonly name="amount"
                                            value="<%= vehicle.totalAmmount %>" placeholder="1234 5678 9012 3456">
                                    </span>
                                </div>
                                <div class="d-flex  mb-4">
                                    <span class="">
                                        <p class="text-muted">method</p>
                                        <div class="col-md-12 ">
                                            <select name="method">
                                                <option value="UPI">UPI</option>
                                                <option value="CASH">CASH</option>
                                                <option value="DEBIT CARD">DEBIT CARD</option>
                                            </select>
                                        </div>
                                    </span>
                                </div>
                                <div class="d-flex  mb-4">
                                    <span class="">
                                        <p class="text-muted">Status</p>
                                        <div class="col-md-12 ">
                                            <select name="status">
                                                <option value="PAID">PAID</option>
                                                <option value="PENDING">PENDING</option>
                                                <option value="REFUND">REFUND</option>
                                                <option value="CANCLE">CANCLE</option>
                                            </select>
                                        </div>
                                    </span>
                                </div>
                                <div class="d-flex mb-5">
                                    <span class="me-5">
                                        <p class="text-muted">payment_details</p>
                                        <input class="form-control" type="text" name="payment_details"
                                            placeholder="payment_details">
                                    </span>
                                </div>

                            </div>
                        </div>
                        <div class="row m-0">
                            <div class="col-12  mb-4 p-0">
                                <button type="submit" class="btn btn-primary" style="width: 100%;">
                                    Pay<span class="fas fa-arrow-right ps-2"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </form>
    <script src="/js/bootstrap.bundle.min.js"></script>
</body>

</html>