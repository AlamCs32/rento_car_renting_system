<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booking vehicle</title>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    <link rel="shortcut icon" href="#">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body style=" background: #000;">
    <!-- Form Start -->
    <div style="width: 20%; margin: auto;margin-top:5% ; color: white;">
        <h1>Booking Vehicle</h1>
        <% if (typeof vehicle !=='undefined' ) { %>
            <div>
                <h4>Name: <%= vehicle.brand %>
                        <%= vehicle.name %>
                </h4>
                <h4>
                    Price: <%= vehicle.price %>
                </h4>
            </div>
            <hr>
            <% } %>
                <form action="" method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Select Date</label>
                        <input type="date" name="Date" class="form-control" id="exampleInputEmail1"
                            aria-describedby="emailHelp" placeholder="Select Date">
                    </div>
                    <div class="form-group">
                        <label for="bookTime">Start Time</label>
                        <input type="time" name="bookTime" class="form-control" placeholder="Start Time">
                    </div>
                    <div class="form-group">
                        <label for="returnTime">Return Time</label>
                        <input type="time" name="returnTime" class="form-control" placeholder="Start Time">
                    </div>
                    <button type="submit" style="float: right;margin-top: 10px;width: 90px;"
                        class="btn btn-primary">Book</button>
                </form>
    </div>
    <!-- JS Bundler -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous">
        </script>

</body>

</html>