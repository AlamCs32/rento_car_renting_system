<!--Section: Content-->
<section class="text-center">
    <div class="row">
        <% if (typeof vehicle !=="undefined" ) { %>
            <% for( let index of vehicle ) { %>

                <div class="col-lg-4 col-md-6 mb-4 mt-3">
                    <div class="card">
                        <div class="bg-image hover-overlay ripple" style="width: fit-content;height: fit-content;"
                            data-mdb-ripple-color="light">
                            <img src="/upload/vehicle/<%= index.image %>" class="img-fluid" />
                            <a href="#!">
                                <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                            </a>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= index.brand %>
                                    <%= index.name %>
                            </h5>
                            <p class="card-text">
                                Price : <%= index.price %> <br>
                                    Location : <%= index.location %>
                            </p>
                            <% if (index.available===1) { %>
                                <a href="/book/<%= index.id %>" class="btn btn-primary">Book</a>
                                <% } else { %>
                                    <div class="alert alert-warning" role="alert">
                                        Not Available
                                    </div>
                                    <% } %>
                        </div>
                    </div>
                </div>
                <% } %>
                    <% } %>
    </div>
</section>