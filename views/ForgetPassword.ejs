<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/ChangePassword.css">
    <title>Forget Password</title>
    <link rel="shortcut icon" href="#">

</head>

<body>


    <div class="mainDiv">
        <% if (typeof response !=="undefined" ) { %>
            <h4 color="red">
                <%= response.message ?response.message:"" %>
                    <%= response.Error ?response.Error:"" %>
            </h4>
            <% } %>
                <div class="cardStyle">
                    <form action="?_method=PUT" method="post" name="signupForm" id="signupForm">

                        <img src="" id="signupLogo" />

                        <h2 class="formTitle">
                            Change Password
                        </h2>
                        <h4 id="Success" style="text-align: center; color: rgb(19, 241, 19);">
                        </h4>
                        <h4 id="Success" style="text-align: center; color: rgb(241, 19, 19);">
                            <%= typeof response.message !=="undefined" ? response.message:"" %>
                                <%= typeof response.Error !=="undefined" ? response.Error:"" %>
                        </h4>
                        <div class="inputDiv">
                            <label class="inputLabel" for="password">New Password</label>
                            <input type="password" id="password" name="password" required>
                        </div>

                        <div class="inputDiv">
                            <label class="inputLabel" for="confirm_password">Confirm Password</label>
                            <input type="password" id="confirmPassword" name="confirm_password">
                        </div>

                        <div class="buttonWrapper">
                            <button type="submit" id="submitButton"
                                class="submitButton pure-button pure-button-primary">
                                <span>Change Password</span>
                            </button>
                        </div>

                    </form>
                </div>
    </div>
</body>

</html>