<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Rento Admin Panel</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="/images/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap"
        rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/css/style1.css" rel="stylesheet">
    <style>
        .bg-dark {
            background-color: #000000;
        }
    </style>
</head>

<body>
    <div class="container-fluid position-relative d-flex p-0">

        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar navbar-dark" style="background-color: #191C24;">
                <a href="/dashboard" class="navbar-brand mx-4 mb-3">
                    <h3 style="color: #EB1616;"><i class="fa fa-user-edit me-2" style="color: #EB1616;"></i>Rento</h3>
                </a>
                <div class="navbar-nav w-100">
                    <a href="/dashboard" class="nav-item nav-link"><i
                            class="fa fa-tachometer-alt me-2"></i>Dashboard</a>
                    <a href="/vehicle/add" class="nav-item nav-link"><i class="fa fa-th me-2"></i>Add Car</a>
                    <a href="/admin/search" class="nav-item nav-link"><i class="fa fa-keyboard me-2"></i>All Car</a>
                    <a href="/dashboard/payment" class="nav-item nav-link active"><i
                            class="fa fa-keyboard me-2"></i>Payment</a>
                    <a href="/" class="nav-item nav-link"><i class="fa fa-table me-2"></i>Home</a>
                </div>
            </nav>
        </div>
        <!-- Sidebar End -->
        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            <nav class="navbar navbar-expand navbar-dark sticky-top px-4 py-0" style="background-color: #191C24;">
                <a href="/dashboard" class="navbar-brand d-flex d-lg-none me-4">
                    <h2 class="text-primary mb-0" style="color: #EB1616;"><i class="fa fa-user-edit"></i></h2>
                </a>
                <a href="#" class="sidebar-toggler flex-shrink-0">
                    <i class="fa fa-bars"></i>
                </a>
                <form class="d-none d-md-flex ms-4">
                    <input class="form-control bg-dark border-0" type="search" placeholder="Search">
                </form>
                <div class="navbar-nav align-items-center ms-auto">
                    <div class="nav-item dropdown">
                        <div class="dropdown-menu dropdown-menu-end border-0 rounded-0 rounded-bottom m-0"
                            style="background-color: #191C24;">

                        </div>
                        <div class="nav-item dropdown">
                        </div>
                    </div>
                </div>
            </nav>
            <!-- Navbar End -->
            <!-- Recent Sales Start -->
            <div class="container-fluid pt-4 px-4" style="color: white;">
                <div class=" text-center rounded p-4" style="background-color: #191C24;">
                    <form action="" method="get">
                        <div class="col-md-12">
                            <input class="contactus" placeholder="Search Code "
                                style="border-radius: 8px;background-color: #191C24;" type="Search" name="code">
                        </div>
                    </form>
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <h6 class="mb-0">All Booking</h6>
                    </div>
                    <div class="table-responsive">
                        <table class="table text-start align-middle table-bordered table-hover mb-0">
                            <thead>
                                <tr class="text-white">
                                    <th scope="col">ID</th>
                                    <th scope="col">User ID</th>
                                    <th scope="col">Booking ID</th>
                                    <th scope="col">amount</th>
                                    <th scope="col">method</th>
                                    <th scope="col">status</th>
                                    <th scope="col">payment_details</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (typeof payment !=="undefined" ) { %>
                                    <% for( let i of payment ) { %>
                                        <tr>
                                            <td>
                                                <%= i.id%>
                                            </td>
                                            <td>
                                                <%= i.userId%>
                                            </td>
                                            <td>
                                                <%= i.bookingId%>
                                            </td>
                                            <td>
                                                <%= i.amount%>
                                            </td>
                                            <td>
                                                <%= i.method%>
                                            </td>
                                            <td>
                                                <%= i.status%>
                                            </td>
                                            <td>
                                                <%= i.payment_details%>
                                            </td>
                                        </tr>
                                        <% } %>
                                            <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Footer Start -->
            <div class="container-fluid pt-4 px-4" style="color: white;">
                <div class=" rounded-top p-4" style="background-color: #191C24;">
                    <div class="row">
                        <div class="col-12 col-sm-6 text-center text-sm-start">
                            &copy; <a href="#">Rento</a>, All Right Reserved.
                        </div>
                        <div class="col-12 col-sm-6 text-center text-sm-end">
                            Designed By MM ALAM
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer End -->
        </div>
        <!-- Content End -->

    </div>
    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/chart/chart.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/waypoints/waypoints.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/lib/tempusdominus/js/moment.min.js"></script>
    <script src="/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="/js/main.js"></script>
</body>

</html>